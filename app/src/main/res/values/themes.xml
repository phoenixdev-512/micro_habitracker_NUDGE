<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Material 3 Compose -->
    <style name="Base.Theme.Nudge" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Nudge" parent="Base.Theme.Nudge" />

    <!-- Splash screen theme -->
    <style name="Theme.Nudge.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Nudge</item>
    </style>
</resources>
